<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fab_margin" android:layout_marginEnd="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin" android:paddingBottom="@dimen/fab_margin">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_android_black_24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken Burger"
        android:layout_toStartOf="@+id/tv_quantity"
        android:layout_toEndOf="@id/iv_image"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/text_title"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2"
        android:textSize="@dimen/text_headlines"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"/>

</RelativeLayout>